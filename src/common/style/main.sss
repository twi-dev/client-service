@import "normalize.css"

@use postcss-nested
@use postcss-font-magician

html, body
  width: 100%
  height: 100%
  font: .97em Roboto // stylelint-disable-line

button, textarea, input
  &:focus, &:active
    outline: none

a
  &, &:hover, &:visited &:active
    color: #653089
    text-decoration: none

:global #twi-root
  width: 100%
  height: 100%
