{
  "extends": "stylelint-config-recommended",
  "rules": {
    "property-no-unknown": [
      true, {
        "ignoreProperties": [
          "lost-align",
          "lost-center",
          "lost-column",
          "lost-flex-container",
          "lost-masonry-column",
          "lost-masonry-wrap",
          "lost-move",
          "lost-offset",
          "lost-row",
          "lost-unit",
          "lost-utility",
          "lost-waffle"
        ]
      }
    ],
    "at-rule-no-unknown": [
      true, {
        "ignoreAtRules": [
          "lost", "use"
        ]
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true, {
        "ignorePseudoClasses": ["global"]
      }
    ]
  }
}
